{
  "name": "web_dev_template",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.html",
  "scripts": {
    "scss": "sass --no-source-map src/scss/:dist/css/ --style=compressed",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 9' -r --no-map dist/css/*",
    "babel": "babel src/js -d dist/js",
    "copy:html": "copyfiles -u 1 src/*.html dist",
    "copy:css": "copyfiles -u 1 src/css/* dist",
    "copy:fonts": "copyfiles -u 1 src/webfonts/* dist",
    "copy": "npm-run-all --parallel copy:*",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/script.js && uglifyjs src/js/*.js -m -c -o dist/js/script.min.js",
    "lint": "eslint src/js",
    "imagemin": "imagemin src/images/* --out-dir=dist/images -p",
    "icons": "svgo -f src/images/icons && mkdir -p dist/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
    "serve": "browser-sync start --browser 'google chrome' --server 'dist' --files 'dist'",
    "watch:scss": "onchange 'src/scss/**/*.scss' -- npm run build:css",
    "watch:css": "onchange 'src/css/*' -- npm run copy:css",
    "watch:js": "onchange 'src/js/*' -- npm run build:js",
    "watch:img": "onchange 'src/images/**' -- npm run build:images",
    "watch:html": "onchange 'src/*.html' -- npm run copy:html",
    "watch:fonts": "onchange 'src/webfonts/*' -- npm run copy:fonts",
    "watch": "npm-run-all --parallel serve watch:*",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run babel && npm run uglify",
    "build:html": "npm run copy",
    "build:images": "npm run imagemin && npm run icons",
    "build": "npm-run-all build:*"
  },
  "author": "Charlie Mac",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.4",
    "browser-sync": "^2.27.9",
    "copyfiles": "^2.4.1",
    "debug": "^4.3.4",
    "eslint": "^8.11.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^2.8.0",
    "trim-newlines": "^4.0.2",
    "uglify-js": "^3.15.3"
  },
  "dependencies": {
    "css-select": "^4.2.1",
    "lodash": "^4.17.21",
    "sass": "^1.49.9",
    "uuid": "^8.3.2"
  }
}
